<div>

    <h1>Add a Product</h1>

    <form action="/products" method="post">
        <label for="name">Product Name</label>
        <input type="text" name="title" id="title" placeholder="product title">
        <label for="description">Description</label>
        <input type="text" name="description" id="description" placeholder="description">
        <label for="price">Price</label>
        <input type="number" id="price" name="price" placeholder="product price">
        <label for="thumbnail">Image</label>
        <input type="text" id="thumbnail" name="thumbnail" placeholder="thumbnail">
        <label for="code">code</label>
        <input type="number" id="code" name="code" placeholder="Code">
        <label for="stock">Stock</label>
        <input type="number" id="stock" name="stock" placeholder="Stock">
